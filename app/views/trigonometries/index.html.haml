    $("#trigonometry_equation").attr("value", string);
  });

  $("#open-caret").click(function() {
    fillOperandTrigonometry("[");
    array_caret.push("[");
    $("#trigonometry_equation").attr("value", string);
  });

  $("#close-caret").click(function() {
    fillCloseCaret();
    $("#trigonometry_equation").attr("value", string);
  });

  $("#variable").click(function() {
    var check = array_caret[array_caret.length -1];
    if (check == "(") {
