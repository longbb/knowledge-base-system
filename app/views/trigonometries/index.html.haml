:javascript
  var equal = false;
  var string = "";
  var array_caret = [];
  var display = "";

  function reset() {
    equal = false;
    string = "";
    display = "";
    array_caret = [];
    $("#trigonometry_equation").attr("value", string);
  }

  function fillCloseCaret() {
    if (array_caret[array_caret.length - 1] === '(') {
      string += ")";
      array_caret.pop();
    } else if (array_caret[array_caret.length - 1] === '[') {
      fillOperandTrigonometry("]");
      array_caret.pop();
    }
  }

  function fillOperandTrigonometry(operand) {
    var check = array_caret[array_caret.length -1];
    if (check == "(") {
      string += operand;
    } else if (checkEqual()){
      string += operand + " ";
    } else {
      string += " " + operand + " ";
    }
  }

  function checkFirstChar() {
    if (string == "") {
      return false;
    }
    return true;
  }

  function checkDuplicateOperator(char) {
    switch (char) {
      case "+":
        return false;
        break;
      case "-":
        return false;
        break;
      case "*":
        return false;
        break;
      case "/":
        return false;
        break;
      default:
        return true;
        break;
    }
  }

  function checkLastChar() {
    if (string !== "") {
      if (string[string.length - 1] == " ") {
        return checkDuplicateOperator(string[string.length - 2]);
      } else if(string[string.length - 1] == "[") {
        return checkDuplicateOperator(string[string.length - 3]);
      } else {
        return checkDuplicateOperator(string[string.length - 1]);
      }
    }
    return true;
  }

  function checkEqual() {
    return string[string.length - 1] == "="
  }

  $("#clear-all").click(function() {
    reset();
  });

  $("#plus").click(function() {
    if (checkFirstChar() && checkLastChar()) {
      fillOperandTrigonometry("+");
      $("#trigonometry_equation").attr("value", string);
    }
  });

  $("#subtract").click(function() {
    if (checkFirstChar() && checkLastChar()) {
      fillOperandTrigonometry("-");
      $("#trigonometry_equation").attr("value", string);
    }
  });

  $("#multiple").click(function() {
    if (checkFirstChar() && checkLastChar()) {
      string += "*";
      $("#trigonometry_equation").attr("value", string);
    }
  });

  $("#divide").click(function() {
    if (checkFirstChar() && checkLastChar()) {
      string += "/";
      $("#trigonometry_equation").attr("value", string);
    }
  });

  $("#power").click(function() {
    if (checkFirstChar()) {
      string += "^ [ ";
      array_caret.push("[");
      $("#trigonometry_equation").attr("value", string);
    }
  });

  $("#dot").click(function() {
    string += ".";
    $("#trigonometry_equation").attr("value", string);
  });

  $("#equal").click(function() {
    if (equal === false) {
      equal = true;
      string += "=";
      $("#trigonometry_equation").attr("value", string);
    }
  });

  $("#sin").click(function() {
    string += "sin(";
    array_caret.push("(");
    $("#trigonometry_equation").attr("value", string);
  });

  $("#cos").click(function() {
